<!doctype html>
<html amp>
<head>
  <meta charset="utf-8">
  <script async src="https://cdn.ampproject.org/v0.js"></script>
  <meta name="viewport" content="width=device-width,minimum-scale=1,initial-scale=1">

  {%- block stylesheets -%}
  <style amp-custom>{% include "style.css" %}
  </style>
  <style amp-boilerplate>body{-webkit-animation:-amp-start 8s steps(1,end) 0s 1 normal both;-moz-animation:-amp-start 8s steps(1,end) 0s 1 normal both;-ms-animation:-amp-start 8s steps(1,end) 0s 1 normal both;animation:-amp-start 8s steps(1,end) 0s 1 normal both}@-webkit-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-moz-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-ms-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-o-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}</style><noscript><style amp-boilerplate>body{-webkit-animation:none;-moz-animation:none;-ms-animation:none;animation:none}</style></noscript>
  {%- endblock stylesheets -%}
  {# <link rel="apple-touch-icon" href="/apple-touch-icon.png"> #}

  {%- block docmeta -%}
  <title>{{ Item.title }}</title>
  {# NOTE: AMP makes the rel=canonical link mandatory #}
  <link rel="canonical" href="{{ site.base ~ Item.archetype.href|with_suffix('.html') }}">
  <meta name="description" content="{{ Item.description }}">
  <meta property="og:title" content="{{ Item.title }}">
  <meta property="og:type" content="article">  {# TODO Lookup table for og:type based on itemtype #}
  <meta property="og:description" content="{{ Item.description }}">
  {% if Item.thumbnail -%}
  <meta property="og:image" content="{{ Item.thumbnail.href }}">
  {%- endif %}{# TODO fallback image based on category or type if none provided.
  Maybe have some fun with it, use placekitten? #}
  {%- if site.twitter %}
  <meta name="twitter:card" content="{{ Item.twittercard or 'summary' }}">
  <meta name="twitter:site" content="{{ site.twitter }}">
  {%- endif %}
  {%- endblock docmeta -%}

  {%- block headscripts -%}
  {% if site.google_analytics_id -%}
  <script async custom-element="amp-analytics" src="https://cdn.ampproject.org/v0/amp-analytics-0.1.js"></script>
  {%- endif %}
  {%- endblock headscripts -%}
</head>
<body>
{% block wholebody %}
{{ Item.description }}
{% endblock wholebody %}

{% block footscripts %}
{% if site.google_analytics_id -%}
<amp-analytics type="googleanalytics" id="analytics1">
<script type="application/json">
{
  "vars": {
    "account": "{{ site.google_analytics_id }}"
  },
  "triggers": {
    "trackPageview": {
      "on": "visible",
      "request": "pageview"
    }
  }
}
</script>
</amp-analytics>
{%- endif %}
{% endblock footscripts %}
</body>
</html>
